#include<iostream>

using namespace std;


int main()
{
	int a;
	int b;
	int c;

	cout<<"This program will ask you to input numerical date values(mm/dd/yyyy) and will show its longer version\n";
	cin.ignore();
	cout<<"Enter (mm)month:\n";
	cin >> a;
	
	
	
	
	while (int(float(a)) == float(a))
	{
		cout<<"Enter (dd)day:\n";
		cin >> b;
		while (int(float(b)) == float(b))
		{
			cout<<"Enter (yyyy)year:\n";
			cin >> c;
			while (int(float(c)) == float(c))
			{
				if (a==1 && b>0 && b<32 && c>999 && c<10000)
				cout<< "January " << b <<", " << c;
				else if (a==2 && b>0 && b<29 && c>999 && c<10000)
				cout<< "February " << b <<", " << c;
				else if (a==3 && b>0 && b<32 && c>999 && c<10000)
				cout<<"March " << b <<", " << c;
				else if (a==4 && b>0 && b<31 && c>999 && c<10000)
				cout<<"April " << b <<", " << c;
				else if (a==5 && b>0 && b<32 && c>999 && c<10000)
				cout<<"May " << b <<", " << c;
				else if (a==6 && b>0 && b<31 && c>999 && c<10000)
				cout<<"June " << b <<", " << c;
				else if (a==7 && b>0 && b<32 && c>999 && c<10000)
				cout<<"July " << b <<", " << c;
				else if (a==8 && b>0 && b<32 && c>999 && c<10000)
				cout<<"August " << b <<", " << c;
				else if (a==9 && b>0 && b<31 && c>999 && c<10000)
				cout<<"September " << b <<", " << c;
				else if (a==10 && b>0 && b<32 && c>999 && c<10000)
				cout<<"October " << b <<", " << c;
				else if (a==11 && b>0 && b<31 && c>999 && c<10000)
				cout<<"November " << b <<", " << c;
				else if (a==12 && b>0 && b<32 && c>999 && c<10000)
				cout<<"December " << b <<", " << c;
				else
				cout<<"Invalid Input";
				break;	
			}
		break;
		}
	break;
	}
}
